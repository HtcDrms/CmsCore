@model CmsCore.Model.Entities.Form
@addTagHelper "CmsCore.Web.Helpers.FormFieldHelper, CmsCore.Web"
@if (Model != null && Model.Id > 0) { 
<form asp-action="Post" asp-controller="FeedBack" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>@Model.FormName</legend>
      
            @foreach (FormField item in Model.FormFields)
            {
                <div class="formField">
                    <formField form-field="item" required="false" read_only="false" show-placeholder="true" />
                    @Html.ValidationMessage(item.Name, "", new { @class = "text-danger" })

                </div>
            }
        <div style="text-align:right;">
            <input type="submit" value="Gönder" class="btn-sm btn-success" />
        </div>
    </fieldset>
</form>
} else {
    <p>Form bulunamadı!</p>
}