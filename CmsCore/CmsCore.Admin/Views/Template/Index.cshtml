@{
    ViewData["Title"] = "All Templates";
}

<link href="@(ViewBag.AssetsUrl)global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="@(ViewBag.AssetsUrl)global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />

<br />
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-action="Index" asp-controller="Template">Templates</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>All Templates</span>
        </li>
    </ul>

</div>
<!-- END PAGE BAR -->
<br />

<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <!-- BEGIN PAGE TITLE-->
                <h1 class="page-title">
                    All Templates

                </h1>
                <!-- END PAGE TITLE-->
                <!-- END PAGE HEADER-->
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a asp-action="Create" asp-controller="Template" id="sample_editable_1_new" class="btn sbold green">
                                    New Template
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="templatesTable">
                    <thead>
                        <tr>
                            <th>
                                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                    <input type="checkbox" class="group-checkable" data-set="#templatesTable .checkboxes" />
                                    <span></span>
                                </label>
                            </th>
                            <th>Name</th>
                            <th>View Name</th>
                            <th>Added By</th>
                            <th>Modified Date</th>
                            <th>Eylemler</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="@(ViewBag.AssetsUrl)global/scripts/datatable.js" type="text/javascript"></script>
    <script src="@(ViewBag.AssetsUrl)global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="@(ViewBag.AssetsUrl)global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="@(ViewBag.AssetsUrl)global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="/js/pages/templates-index.js"></script>
    <script src="@(ViewBag.AssetsUrl)/pages/scripts/table-datatables-buttons.js" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            initTable1();
        });
    </script>
    }
