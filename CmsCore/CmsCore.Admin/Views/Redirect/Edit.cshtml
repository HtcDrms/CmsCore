@model CmsCore.Admin.Models.RedirectViewModel

@{
    ViewBag.Title = "Yönlendirme Düzenle";
}
<br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Redirect")">Yönlendirmeler</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Düzenle</span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />
<h1 class="page-title">
    <small></small>
</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-6 ">
      <div class="portlet light bordered">
          <div class="portlet-title">
              <div class="caption font-dark">
                  <i class="icon-settings font-dark"></i>
                  <span class="caption-subject bold uppercase">Yönlendirme Düzenle</span>
              </div>
          </div>
          <div class="portlet-body form">
              <form role="form">
                  <div class="form-body">
                      <div class="form-group">
                          @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                          @Html.HiddenFor(model => model.Id)
                          <div class="form-body">
                              @Html.LabelFor(model => model.Name)
                              @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @tabindex = "1", @class = "form-control" ,@autofocus="autofocus"} })
                              @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                          </div>
                          <div class="form-body">
                              @Html.LabelFor(model => model.OldUrl)
                              @Html.EditorFor(model => model.OldUrl, new { htmlAttributes = new { @tabindex = "2", @class = "form-control"} })
                              @Html.ValidationMessageFor(model => model.OldUrl, "", new { @class = "text-danger" })
                          </div>
                          <div class="form-body">
                              @Html.LabelFor(model => model.NewUrl)
                              @Html.EditorFor(model => model.NewUrl, new { htmlAttributes = new { @tabindex = "3", @class = "form-control" } })
                              @Html.ValidationMessageFor(model => model.NewUrl, "", new { @class = "text-danger" })
                          </div>
                          <div class="form-body">
                              @Html.LabelFor(model => model.IsActive)
                              @Html.CheckBoxFor(model => model.IsActive, new { htmlAttributes = new { @tabindex = "4", @class = "form-control" } })
                              @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                          </div>
                         
                      </div>
                  </div>
                  <div class="form-actions">
                      <button type="submit" tabindex="5" class="btn blue">Kaydet</button>
                      <button type="button" tabindex="6" class="btn default" onclick="window.location='@Url.Action("Index","Redirect")';">İptal</button>
                  </div>
              </form>
          </div>
      </div>
  </div>
</div>
}
@section Scripts{
    @*@Scripts.Render("~/bundles/jqueryval")*@
}
