@{
    ViewBag.Title="Yönlendirmeler";
}

<link href="@(ViewBag.AssetsUrl)global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="@(ViewBag.AssetsUrl)global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />

<br />
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-action="Index" asp-controller="Redirect">Yönlendirmeler</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Yönlendirmeler</span>
        </li>
    </ul>

</div>
<!-- END PAGE BAR -->
<br />

<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <!-- BEGIN PAGE TITLE-->
                <h1 class="page-title">Yönlendirmeler</h1>
                <!-- END PAGE TITLE-->
                <!-- END PAGE HEADER-->
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="/Redirect/Create" id="sample_editable_1_new" class="btn sbold green">Yönlendirme Ekle<i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="redirectTable">
                    <thead>
                        <tr>
                            <th>
                                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                    <input type="checkbox" class="group-checkable" data-set="#redirectTable .checkboxes" />
                                    <span></span>
                                </label>
                            </th>
                            <th>Ad</th>
                            <th>Eski Adres</th>
                            <th>Yeni Adres</th>
                            <th>Aktif</th>
                            <th>Eylemler</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="@(ViewBag.AssetsUrl)global/scripts/datatable.js" type="text/javascript"></script>
    <script src="@(ViewBag.AssetsUrl)global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="@(ViewBag.AssetsUrl)global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="@(ViewBag.AssetsUrl)global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="/js/pages/redirect-index.js"></script>
    <script src="@(ViewBag.AssetsUrl)/pages/scripts/table-datatables-buttons.js" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            initTable1();
        });
    </script>
}
