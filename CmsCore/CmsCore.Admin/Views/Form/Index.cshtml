    ViewBag.Title = @Html.Translate("Index");
}

<link href="@(ViewBag.AssetsUrl)/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="@(ViewBag.AssetsUrl)/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />

<!-- END HEAD -->


<br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/Form">@Html.Translate("Formlar")</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>@Html.Translate("Tüm Formlar")</span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />



<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <h1 class="page-title">
                    @Html.Translate("Tüm Formlar")
                </h1>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="/Form/Create" id="sample_editable_1_new" class=" btn sbold green">@Html.Translate("Yeni Form")
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="allFormTable">
                    <thead>
                        <tr>
                            <th>
                                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                    <input type="checkbox" class="group-checkable" data-set="#allFormTable .checkboxes" />
                                    <span></span>
                                </label>
                            </th>
                            <th>@Html.Translate("Form Id")</th>
                            <th>@Html.Translate("Form İsmi")</th>
                            <th>@Html.Translate("Eylemler")</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>





@section footer {
    <script src="@(ViewBag.AssetsUrl)/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="@(ViewBag.AssetsUrl)/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
