@model FormViewModel
@using CmsCore.Admin.Helpers
<!DOCTYPE html>
<meta charset="utf-8" />
<title>@ViewBag.Title-CMS Core</title>
<br />
<script src="//cdn.ckeditor.com/4.6.2/standard/ckeditor.js"></script>
<style>
    textarea {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Form")">Formlar</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Form Düzenle</span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase">Form Düzenle</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    
                </div>
            </div>
            <div class="row">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    <div class="col-md-12 ">
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                        <div class="portlet light bordered">

                            <!--İLAN VERİLİŞ TARİHİ O AN ALINACAK-->



                            <div class="portlet-body form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id)
                                <div class="form-body">
                                    <div class="form-group">
                                        <text>Form İsmi Giriniz:</text><br />
                                        @Html.TextBoxFor(model => model.FormName,new {@class="form-control" })
                                        @Html.ValidationMessageFor(model => model.FormName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <text>E-posta adresi giriniz:</text><br />
                                        <text>To:</text><br />@Html.TextBoxFor(model => model.EmailTo, new { @class = "form-control" })<br />
                                        @Html.ValidationMessageFor(model => model.EmailTo, "", new { @class = "text-danger" })<br />
                                        <text>cc:</text><br />@Html.TextBoxFor(model => model.EmailCc, new { @class = "form-control" })<br />
                                        @Html.ValidationMessageFor(model => model.EmailCc, "", new { @class = "text-danger" })<br />
                                        <text>bcc:</text><br />@Html.TextBoxFor(model => model.EmailBcc, new { @class = "form-control" })<br />
                                        @Html.ValidationMessageFor(model => model.EmailBcc, "", new { @class = "text-danger" })<br />
                                    </div>
                                    <div class="form-group">
                                        <text>Açıklama Giriniz:</text>
                                        @Html.TextAreaFor(model => model.Description, new { @tabindex = "4", @class = "form-control spinner", autofocus = "autofocus" })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                        <script>
                                    CKEDITOR.replace('Description');
                                        </script>
                                    </div>
                                    <div class="form-group">
                                        <text>Kapanış Mesajı Giriniz:</text>
                                        @Html.TextAreaFor(model => model.ClosingDescription, new { @tabindex = "5", @class = "form-control spinner"})
                                        @Html.ValidationMessageFor(model => model.ClosingDescription, "", new { @class = "text-danger" })
                                        <script>
                                    CKEDITOR.replace('ClosingDescription');
                                        </script>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-group">
                                            <text>Google Analytics:</text>
                                            @Html.TextAreaFor(model => model.GoogleAnalyticsCode, new { @tabindex = "6", @class = "form-control spinner"})
                                            @Html.ValidationMessageFor(model => model.GoogleAnalyticsCode, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <input type="submit" value="Save" class="btn btn-success" />
                        </div>

                        
                        <!-- END SAMPLE FORM PORTLET-->
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                    </div>
                }
            </div>
        </div>
    </div>
</div>


