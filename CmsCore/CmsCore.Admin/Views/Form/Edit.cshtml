@model KariyerPortali.Admin.ViewModels.FormViewModel
    @using KariyerPortali.Admin.Helpers
<!DOCTYPE html>
<meta charset="utf-8" />
<title>@ViewBag.Title-@Html.Translate("Kariyer Portalı")</title>
<br />
<script src="/Scripts/ckeditor/ckeditor.js"></script>
<style>
    textarea {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Form")">@Html.Translate("Formlar")</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>@Html.Translate("Form Düzenle")</span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase">@Html.Translate("Form Düzenle")</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    
                </div>
            </div>
            <div class="row">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    <div class="col-md-12 ">
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                        <div class="portlet light bordered">

                            <!--İLAN VERİLİŞ TARİHİ O AN ALINACAK-->



                            <div class="portlet-body form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.FormId)
                                <div class="form-body">
                                    <div class="form-group">
                                        <text>Form İsmi Giriniz:</text><br />
                                        @Html.TextBoxFor(model => model.FormName)
                                        @Html.ValidationMessageFor(model => model.FormName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <text>@Html.Translate("E-posta adresi giriniz:")</text><br />
                                        <text>@Html.Translate("To:")</text><br />@Html.TextBoxFor(model => model.Email_to)<br />
                                        @Html.ValidationMessageFor(model => model.Email_cc, "", new { @class = "text-danger" })<br />
                                        <text>@Html.Translate("cc:")</text><br />@Html.TextBoxFor(model => model.Email_cc)<br />
                                        @Html.ValidationMessageFor(model => model.Email_cc, "", new { @class = "text-danger" })<br />
                                        <text>@Html.Translate("bcc:")</text><br />@Html.TextBoxFor(model => model.Email_bcc)<br />
                                        @Html.ValidationMessageFor(model => model.Email_bcc, "", new { @class = "text-danger" })<br />
                                    </div>
                                    <div class="form-group">
                                        <text>@Html.Translate("Açıklama Giriniz:")</text>
                                        @Html.TextAreaFor(model => model.Description, new { @tabindex = "4", @class = "form-control spinner", autofocus = "autofocus" })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                        <script>
                                    CKEDITOR.replace('Description');
                                        </script>
                                    </div>
                                    <div class="form-group">
                                        <text>@Html.Translate("Kapanış Mesajı Giriniz:")</text>
                                        @Html.TextAreaFor(model => model.ClosingDescription, new { @tabindex = "5", @class = "form-control spinner"})
                                        @Html.ValidationMessageFor(model => model.ClosingDescription, "", new { @class = "text-danger" })
                                        <script>
                                    CKEDITOR.replace('ClosingDescription');
                                        </script>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-group">
                                            <text>@Html.Translate("Google Analytics:")</text>
                                            @Html.TextAreaFor(model => model.GoogleAnalyticsCode, new { @tabindex = "6", @class = "form-control spinner"})
                                            @Html.ValidationMessageFor(model => model.GoogleAnalyticsCode, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <input type="submit" value="Kaydet" />
                        <!-- END SAMPLE FORM PORTLET-->
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

