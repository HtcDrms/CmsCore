@model KariyerPortali.Admin.ViewModels.FormFieldViewModel
    @using KariyerPortali.Admin.Helpers
<!DOCTYPE html>
<meta charset="utf-8" />
<title>@ViewBag.Title-@Html.Translate("Kariyer Portalı")</title>
<br />
<style>
    textarea {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","FormField")">@Html.Translate("Form Alanları")</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>@Html.Translate("Form Alanı Düzenle")</span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase">@Html.Translate("Form Alanı Düzenle")</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    
                </div>
            </div>
            <div class="row">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    <div class="col-md-12 ">
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                        <div class="portlet light bordered">

                            <!--İLAN VERİLİŞ TARİHİ O AN ALINACAK-->



                            <div class="portlet-body form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.FormFieldId)
                                <div class="form-body">
                                    <div class="form-group">
                                        <text>@Html.Translate("Form Seçiniz:")</text><br />
                                        @Html.DropDownList("FormId", (SelectList)ViewBag.Forms, "Seçiniz", new { @tabindex = "1", @class = "form-control", @selected = "FormId" })
                                        @Html.ValidationMessageFor(model => model.FormId, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <text>@Html.Translate("Form Alanı İsmi Giriniz:")</text><br />
                                        @Html.TextBoxFor(model => model.Description, new { htmlAttributes = new { @tabindex = "2", @class = "form-control spinner", autofocus = "autofocus" } })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <text>@Html.Translate("Form Alanı Tipi Seçiniz:")</text>
                                        @Html.EnumDropDownListFor(model => model.FormType, new { @tabindex = "3", @class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.FormType, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <text>@Html.Translate("Zorunlu Alan")</text>
                                    @Html.CheckBoxFor(model => model.Required, new { @tabindex = "4", @class = "form-control spinner" })
                                    @Html.ValidationMessageFor(model => model.Required, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <text>@Html.Translate("Varsayılan Değer Giriniz:")</text>
                                    @Html.TextBoxFor(model => model.Value, new { @tabindex = "5", @class = "form-control spinner" })
                                    @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                </div>
                            </div>
                        </div>
                    </div>


                        <!-- END SAMPLE FORM PORTLET-->
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                    <input type="submit" />
                }
            </div>

            </div>
        </div>
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

