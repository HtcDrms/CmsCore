@addTagHelper "CmsCore.Admin.Helpers.FormFieldHelper, CmsCore.Admin"
@using CmsCore.Admin.Helpers
@using CmsCore.Model
@model FeedbackViewModel
<!DOCTYPE html>
<meta charset="utf-8" />
<title>@ViewBag.Title-CMS Core</title>
<br />
<style>
    textarea {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","FeedBack")">Geri Bildirimler</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Geri Bildirim Detayları</span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase">Geri Bildirim Detayları</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                </div>
            </div>
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.AntiForgeryToken()
                <div class="col-md-12 ">
                    <!-- BEGIN SAMPLE FORM PORTLET-->
                    <div class="portlet light bordered">

                        <!--İLAN VERİLİŞ TARİHİ O AN ALINACAK-->



                        <div class="portlet-body form">
                            <div class="form-body">
                                <div class="form-group">
                                    <h1>@ViewBag.Form.FormName</h1><br />
                                </div>
                                <div class="portlet light bordered">
                                    <div class="form-group">
                                        <text style="display:block; font-weight:bolder;">Sent IP</text>
                                        @Html.DisplayFor(model => model.IP)
                                    </div>
                                    <div class="form-group">
                                        <text style="display:block;font-weight:bolder;">Sent Date</text>
                                        @Html.DisplayFor(model => model.SentDate)
                                    </div>
                                    <div class="form-group">
                                        <text style="display:block;font-weight:bolder;">User Name</text>
                                        @Html.DisplayFor(model => model.UserName)
                                    </div>
                                    <div class="form-group">
                                        <text style="display:block;font-weight:bolder;">Added By</text>
                                        @Html.DisplayFor(model => model.AddedBy)
                                    </div>
                                    <div class="form-group">
                                        <text style="display:block;font-weight:bolder;">Modified By</text>
                                        @Html.DisplayFor(model => model.ModifiedBy)
                                    </div>
                                    <div class="form-group">
                                        <text style="display:block;font-weight:bolder;">Description</text>
                                        @Html.Raw(ViewBag.Form.Description)
                                    </div>
                                    @foreach (FormField item in ViewBag.FormFields)
                                    {
                                        <div class="form-group">
                                            <formField form-field="item" required="false" read_only="false" />
                                        </div>
                                    }
                                    <a asp-controller="Feedback" asp-action="Index" class="btn btn-success">Back To Index</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


